<?php

$time = time();
$actual_time = date('d M Y @ H:i:s', $time);
$modified_time = date('d M Y @ H:i:s', strtotime('+1 week 2 hours 30 seconds'));
$anotherModified_time = date('d M Y @ H:i:s', $time+(2*24*60*60)); //zmiana o dwa dni

echo 'Czas teraÅºniejszy: '.$actual_time.'<br>
	  Czas zmieniony: '.$modified_time.'<br>
	  Jeszcze inny czas: '.$anotherModified_time;

?>
